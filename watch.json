{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^public/",
      "^dist/"
    ],
    "include": [
      "\\.js$",
      "\\.jsx$",
      "\\.json",
      "\\.css$",
      "\\.html",
      "\\.scss"
    ]
  },
  "throttle": 100
}
